{
  "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../dist/libs/ui",
  "lib": {
    "entryFile": "src/index.ts"
  },
  "assets": [
    {
      "glob": "**/*",
      "input": "src/styles",
      "output": "styles"
    },
    {
      "glob": "_index.scss",
      "input": "src",
      "output": "/"
    }
  ]
}
